---
const navLinks = [
  { href: '/', label: 'Accueil' },
  { href: '/simulateur', label: 'Simulateur' },
  { href: '/blog', label: 'Conseils' },
  { href: '/experts', label: 'Nos Experts' },
  { href: '/comparatifs', label: 'Comparatifs' }
];
---

<header class="fixed top-0 left-0 right-0 z-40 bg-white/95 backdrop-blur-md border-b border-gray-100">
  <nav class="container-custom mx-auto px-4 md:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">
      <a href="/" class="flex items-center gap-3 group">
        <div class="w-10 h-10 bg-gradient-to-br from-emerald-400 to-emerald-600 rounded-xl flex items-center justify-center shadow-lg shadow-emerald-500/30 group-hover:shadow-emerald-500/50 transition-shadow">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </div>
        <span class="font-display font-bold text-xl text-navy-900">
          RÃ©nov<span class="text-emerald-500">Action</span>
        </span>
      </a>
      
      <div class="hidden lg:flex items-center gap-8">
        {navLinks.map(link => (
          <a 
            href={link.href} 
            class="text-navy-600 hover:text-emerald-600 font-medium transition-colors relative group"
          >
            {link.label}
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-emerald-500 group-hover:w-full transition-all duration-300"></span>
          </a>
        ))}
      </div>
      
      <div class="hidden md:block">
        <a href="/simulateur" class="btn-primary">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
          Calculer mes aides
        </a>
      </div>
      
      <button 
        id="mobile-menu-btn"
        class="lg:hidden p-2 text-navy-600 hover:text-emerald-600 transition-colors"
        aria-label="Menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
    
    <div id="mobile-menu" class="lg:hidden hidden pb-6">
      <div class="flex flex-col gap-4 pt-4 border-t border-gray-100">
        {navLinks.map(link => (
          <a 
            href={link.href} 
            class="text-navy-600 hover:text-emerald-600 font-medium transition-colors py-2"
          >
            {link.label}
          </a>
        ))}
        <a href="/simulateur" class="btn-primary text-center mt-4">
          Calculer mes aides
        </a>
      </div>
    </div>
  </nav>
</header>

<div class="h-16 md:h-20"></div>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
