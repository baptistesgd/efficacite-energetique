---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const pageTitle = "Blog - Conseils rénovation énergétique";
const pageDescription = "Guides et conseils d'experts pour réussir votre rénovation énergétique.";
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="section-padding bg-gradient-to-b from-gray-50 to-white">
    <div class="container-custom mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-display font-bold text-navy-900 mb-4">
          Conseils d'<span class="gradient-text">experts</span>
        </h1>
        <p class="text-lg text-navy-600 max-w-2xl mx-auto">
          Nos ingénieurs décryptent l'actualité énergétique et vous donnent des conseils concrets.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedPosts.map((post) => (
          <a href={`/blog/${post.slug}`} class="card card-hover overflow-hidden group">
            <div class="aspect-video bg-gradient-to-br from-emerald-400 to-emerald-600 flex items-center justify-center">
              <svg class="w-12 h-12 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <div class="p-6">
              <div class="flex items-center gap-2 mb-3">
                <span class="px-2 py-1 bg-emerald-100 text-emerald-700 rounded text-xs font-medium">
                  {post.data.category}
                </span>
                <span class="text-gray-400 text-sm">
                  {post.data.pubDate.toLocaleDateString('fr-FR', { day: 'numeric', month: 'long', year: 'numeric' })}
                </span>
              </div>
              <h2 class="text-xl font-display font-semibold text-navy-900 group-hover:text-emerald-600 transition-colors mb-3">
                {post.data.title}
              </h2>
              <p class="text-navy-600 text-sm line-clamp-2">
                {post.data.description}
              </p>
              <div class="flex items-center gap-2 mt-4 pt-4 border-t border-gray-100">
                <div class="w-8 h-8 bg-emerald-100 rounded-full flex items-center justify-center text-emerald-600 text-xs font-bold">
                  {post.data.author.name.split(' ').map((n: string) => n[0]).join('')}
                </div>
                <div>
                  <p class="text-sm font-medium text-navy-900">{post.data.author.name}</p>
                  <p class="text-xs text-navy-500">{post.data.author.role}</p>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
