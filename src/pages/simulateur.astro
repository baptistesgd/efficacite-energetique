---
import Layout from '../layouts/Layout.astro';
import Simulator from '../components/Simulator.astro';
import TrustSection from '../components/TrustSection.astro';

const pageTitle = "Simulateur d'économies d'énergie gratuit";
const pageDescription = "Calculez vos économies d'énergie en 2 minutes. Estimez vos gains grâce à l'isolation et aux panneaux solaires. Vérifiez votre éligibilité MaPrimeRénov' 2026.";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "Simulateur d'économies d'énergie",
  "description": pageDescription,
  "applicationCategory": "UtilitiesApplication",
  "operatingSystem": "Web",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "EUR"
  }
};
---

<Layout title={pageTitle} description={pageDescription} jsonLd={jsonLd}>
  <Simulator />
  <TrustSection />
</Layout>
